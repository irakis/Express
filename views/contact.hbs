<h2>Contact me</h2>
{{#if isSent}}
  <div class="isSent">
    <h2>The message has been sent! {{ name1 }} has been sent!</h2>
  </div>
{{/if }}
{{#if isError}}
  <div class="isError">
    <h2>You can\'t leave fields empty</h2>
  </div>
{{/if}}
<form action="/contact/send-message" method="POST" enctype="multipart/form-data">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
   <label>
    Message: <textarea name="message"></textarea>
  </label>
  <label>
    Select a file: <input type="file" name="myFile" accept=".png, .jpg, .jpeg, .gif, image/png, image/jpg, image/jpeg, image/gif">
  </label>
  <button type="submit">Send message</button>
</form>
